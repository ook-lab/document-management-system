{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "学校通知スキーマ",
  "description": "学校からのお知らせデータの構造定義",
  "properties": {
    "school_name": {
      "type": "string",
      "title": "学校名",
      "description": "学校の正式名称"
    },
    "grade": {
      "type": "string",
      "title": "学年",
      "description": "対象学年"
    },
    "notice_type": {
      "type": "string",
      "title": "お知らせ種別",
      "description": "行事案内、提出物、注意事項、学年通信など",
      "enum": ["行事案内", "提出物", "注意事項", "学年通信", "その他"]
    },
    "event_date": {
      "type": "string",
      "format": "date",
      "title": "イベント日",
      "description": "YYYY-MM-DD形式"
    },
    "deadline": {
      "type": "string",
      "format": "date",
      "title": "提出期限",
      "description": "YYYY-MM-DD形式"
    },
    "requirements": {
      "type": "array",
      "title": "必要な持ち物・準備",
      "items": {
        "type": "string"
      }
    },
    "important_points": {
      "type": "array",
      "title": "重要事項",
      "items": {
        "type": "string"
      }
    },
    "weekly_schedule": {
      "type": "array",
      "title": "週間予定",
      "description": "週間スケジュール（表形式の場合）",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "title": "日付",
            "description": "MM-DD形式"
          },
          "day": {
            "type": "string",
            "title": "曜日"
          },
          "events": {
            "type": "array",
            "title": "行事",
            "items": {
              "type": "string"
            }
          },
          "class_schedules": {
            "type": "array",
            "title": "クラス別時間割",
            "items": {
              "type": "object",
              "properties": {
                "class": {
                  "type": "string",
                  "title": "クラス名",
                  "description": "5A、5Bなど"
                },
                "subjects": {
                  "type": "array",
                  "title": "科目リスト",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["class", "subjects"]
            }
          },
          "note": {
            "type": "string",
            "title": "備考"
          }
        },
        "required": ["date", "day"]
      }
    }
  },
  "required": ["school_name", "grade", "notice_type"]
}
